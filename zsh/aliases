
# utility
alias reload='source ~/dotfiles/zsh/aliases; source ~/dotfiles/zsh/zshenv; source ~/dotfiles/zsh/zshrc;'
alias ea='$EDITOR ~/dotfiles/zsh/aliases && reload' # Edit aliases
alias ee='$EDITOR ~/dotfiles/zsh/zshenv && reload'
alias ec='$EDITOR ~/dotfiles/zsh/zshrc && reload'

# to make aliases work with sudo
# whitespace ---v
alias sudo='sudo '

alias s=subl3
alias g=git
alias py='python'
alias ipy='ipython'
alias x='chmod u+x'
alias utar='tar xvf'
alias dstat='dstat -cdnpmgs --top-bio --top-cpu'
