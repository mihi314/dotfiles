#!/bin/bash
set -Eeo pipefail

cd ~/dotfiles

echo -e 
echo -e '\033[0;35mStage changes, then exit shell to commit.\033[0;m'
$SHELL -i
# git add -i

# exit if there was nothing staged
if git diff --cached --quiet; then
    echo -e '\033[0;35mAborting due to nothing being staged.\033[0;m'
    exit 1
fi

git commit
git push
